<div class="page-header">
  <h1>Create Project <small>Fill in the details of your project</small></h1>
</div>
<div class="row">
  <div class="span10">
    <%= twitter_bootstrap_form_for @project do |project| %>

      <%= project.inputs 'Project Details', :class => 'sign_up' do %>

        <%= project.text_field :name, :placeholder => 'Enter a name' %>

        <%= project.toggles 'Options' do %>
          <%= project.check_box :closed,   'Project is closed' %>
          <%= project.check_box :closed,   'Project is private' %>
        <% end %>

      <% end %>

      <%= project.actions do %>
        <%= project.submit 'Create'%>
        <%= button_tag  'Cancel', :type => 'reset', :class => 'btn' %>
      <% end %>
    <% end %>
  </div>
  <div class="span4">
    <h3>Secondary content</h3>
  </div>
</div>